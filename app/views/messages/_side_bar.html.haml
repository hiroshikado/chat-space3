.side-bar
  .side-bar__user-name
    .user-name__top-item
      .user-name__top-item__user-name
        = current_user.name
      .user-name__top-item__icons
        = link_to "/groups/new" do
          = icon('fas', 'edit', class:'edit-icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class:'setting-icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
